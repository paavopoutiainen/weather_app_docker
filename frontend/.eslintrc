{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "semi": ["error", "never"],
    "comma-dangle": ["error", "never"],
    "linebreak-style": ["error", "windows"],
    "indent": ["error", 4]
  },
  "globals": {
    "fetch": false,
    "document": true
  }
}
